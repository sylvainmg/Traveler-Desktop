{
    "name": "desktop",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "start": "electronmon .",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "dist": "npm run build && electron-builder"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.14",
        "chart.js": "^4.5.1",
        "electronmon": "^2.0.3",
        "lucide-react": "^0.546.0",
        "react": "^19.1.1",
        "react-chartjs-2": "^5.3.0",
        "react-dom": "^19.1.1",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.9.4",
        "sweetalert2": "^11.26.3",
        "tailwindcss": "^4.1.14"
    },
    "devDependencies": {
        "electron": "^38.3.0",
        "@eslint/js": "^9.36.0",
        "@types/node": "^24.6.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@types/react-modal": "^3.16.3",
        "@vitejs/plugin-react": "^5.0.4",
        "eslint": "^9.36.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.22",
        "globals": "^16.4.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.1.7"
    },
    "description": "Logiciel Desktop de gestion de la base de donn√©es de Traveler.",
    "author": "Sylvain",
    "build": {
        "appId": "com.traveler.desktop",
        "productName": "Traveler Desktop",
        "icon": "electron/assets/icon",
        "directories": {
            "buildResources": "public/icons",
            "output": "dist_electron"
        },
        "files": [
            "dist/**",
            "electron/main.js",
            "node_modules/**/*",
            "package.json"
        ],
        "asarUnpack": [
            "node_modules/@tailwindcss/oxide-wasm32-wasi/**",
            "node_modules/@emnapi/**"
        ],
        "win": {
            "icon": "public/icons/icon.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "icon": "icon.ico"
        }
    }
}
